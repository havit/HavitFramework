<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net48</TargetFrameworks>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<!-- NuGet -->
	<Import Project="../NuGet.targets" />
	<PropertyGroup>
		<PackageVersion>2.0.30-pre01</PackageVersion>
		<Description>HAVIT .NET Framework Extensions - Hangfire extensions</Description>
	</PropertyGroup>
	<ItemGroup>
	  <PackageReference Include="Hangfire.Core" Version="1.8.22" />
	  <PackageReference Include="OpenTelemetry.Api" Version="1.15.0" />
		<!-- update vulnerable dependencies to fixed versions -->
      <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\Havit.AspNetCore\Havit.AspNetCore.csproj" Condition="'$(TargetFramework)' == 'net8.0'" />
	  <ProjectReference Include="..\Havit.Core\Havit.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Havit.Hangfire.Extensions.Tests" />
		<!-- For dynamic proxy generation in Moq -->
		<InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
	</ItemGroup>

</Project>
