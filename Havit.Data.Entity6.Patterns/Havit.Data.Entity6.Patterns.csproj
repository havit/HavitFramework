	<Import Project="../NuGet.targets" />
	<PropertyGroup>
		<PackageVersion>2.2.30</PackageVersion>
		<Description>HAVIT .NET Framework Extensions - Entity Framework 6 Extensions - Data Patterns</Description>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
